{
	"include": [
		"**/*.*",
		"*.md",
		"**/*.vue"
	],
	"exclude": [
		"node_modules"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"#/*": [
				"./*"
			]
		},
		"jsx": "preserve",
		"esModuleInterop": true,
		"target": "esnext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"allowJs": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "lib/types",
	},
	"vueCompilerOptions": {
		"plugins": [
			"@vue/language-plugin-pug"
		]
	}
}